{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/schedule/generate.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "api/_python/**"
      }
    },
    {
      "src": "api/mcp/tools.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "api/_python/**"
      }
    }
  ],
  "routes": [
    { "src": "/api/schedule/generate", "dest": "api/schedule/generate.py" },
    { "src": "/api/mcp/tools", "dest": "api/mcp/tools.py" }
  ],
  "crons": [
    {
      "path": "/api/cron/send-emails",
      "schedule": "*/15 * * * *"
    }
  ]
}
